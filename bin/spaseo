#!/usr/bin/env node
var pjson = require('../package.json');
var program = require('commander');

program
.version(pjson.version)
.option('-p, --port <port>', 'port number(default: 9999)')
.option('-t, --timeout <timeout>', 'timeout duration(default: 7000)')
.option('-u, --url <url>', 'target spa base url like "http://example.com"(default: "http://"+request.headers.host)')
.option('-v, --verbose', 'whether to put logs')
.parse(process.argv);

require('../spaseo')(program.port, program.url, program.timeout, program.verbose);
